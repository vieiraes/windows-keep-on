{
  "name": "windows-keep-on",
  "version": "1.0.0",
  "description": "Keep Windows awake preventing screen saver/sleep mode",
  "main": "./src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64"
  },
  "build": {
    "productName": "WindowsKeepOn",
    "appId": "net.vieiraes",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/icon.png"
    },
    "directories": {
      "output": "dist"
    }
  },
  "author": "Bruno Vieira",
  "license": "ISC",
  "devDependencies": {
    "electron": "^latest",
    "electron-builder": "^latest"
  }
}